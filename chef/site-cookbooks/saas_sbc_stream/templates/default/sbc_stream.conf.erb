#!/bin/bash
### BEGIN INIT INFO
# Provides: sbc_stream
# Required-Start: $remote_fs $syslog
# Required-Stop: $remote_fs $syslog
# Default-Start: 2 3 4 5
# Default-Stop: 0 1 6
# Short-Description: Receives UPD stream from SBC and saves to a file.
### END INIT INFO

description "sbc stream log listener"

start on runlevel [2345]
stop on runlevel [!2345]

expect fork
respawn

exec /usr/bin/perl /usr/local/bin/sbc_udp_stream/udpsrv.pl 2>&1 &
